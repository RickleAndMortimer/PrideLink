<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44sp"
        android:fontFamily="@font/delius_unicase"
        android:includeFontPadding="false"
        android:text="Pride"
        android:textColor="#000000"
        android:textSize="56sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="right"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pride_link_updown" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="44sp"
            android:fontFamily="@font/delius_unicase"
            android:text="Link"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="56sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:src="@drawable/pridelink_login_screen" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="380dp"
            android:layout_height="40dp"
            android:text="Enter a username and your pronouns"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"


            ></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/editText"
                android:layout_width="380dp"
                android:layout_height="48sp"
                android:layout_marginLeft="10dp"
                android:padding="15sp"
                android:inputType="text"
                android:background="@drawable/edit_text_border"
                android:hint="Frank Ocean (he/him)"
                android:textColorHint="#C6BEBE"
                >
            </EditText>
            <Button
                android:layout_width="53sp"
                android:layout_height="55sp"
                android:layout_alignEnd="@id/editText"
                android:layout_alignBottom="@id/editText"
                android:background="@drawable/button_border"
                android:padding="10sp"
                android:drawableTop="@drawable/custom_button"
                android:gravity="center"
                >

            </Button>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>